<?xml version="1.0"?>
<!DOCTYPE platform SYSTEM "http://simgrid.gforge.inria.fr/simgrid/simgrid.dtd">
<platform version="4.1">
    <zone id="AS0" routing="Full">
        <host id="Host1" speed="1000Gf" core="10">
            <prop id="type" value="compute"/>
        </host>
        <host id="Host2" speed="1000Gf" core="10">
            <prop id="type" value="compute"/>
        </host>
        <host id="Host3" speed="1000Gf" core="10">
            <prop id="type" value="compute"/>
        </host>
        <host id="Host4" speed="1000Gf" core="10">
            <prop id="type" value="compute"/>
        </host>

        <host id="PFSHost1" speed="1000Gf" core="10">
            <prop id="type" value="storage"/>
            <prop id="category" value="pfs"/>
            <prop id="size" value="340282366920938463463374607431768211456"/> <!-- size in B -->
        </host>
        <host id="BBHost1" speed="1000Gf" core="10">
            <prop id="type" value="storage"/>
            <prop id="category" value="bb"/>
            <prop id="size" value="18446744073709551616"/> <!-- size in B -->
        </host>

        <link id="pfslink" bandwidth="5000GBps" latency="0us">
            <prop id="type" value="pfs-cori"/>
        </link>
        <link id="bblink" bandwidth="10000GBps" latency="0us">
            <prop id="type" value="bb-cori"/>
        </link>

        <route src="Host1" dst="Host2">
            <link_ctn id="pfslink"/>
        </route>
        <route src="Host1" dst="Host3">
            <link_ctn id="pfslink"/>
        </route>
        <route src="Host1" dst="Host4">
            <link_ctn id="pfslink"/>
        </route>
        <route src="Host2" dst="Host3">
            <link_ctn id="pfslink"/>
        </route>
        <route src="Host2" dst="Host4">
            <link_ctn id="pfslink"/>
        </route>
        <route src="Host3" dst="Host4">
            <link_ctn id="pfslink"/>
        </route>

        <route src="PFSHost1" dst="Host1">
            <link_ctn id="pfslink"/>
        </route>
        <route src="PFSHost1" dst="Host2">
            <link_ctn id="pfslink"/>
        </route>
        <route src="PFSHost1" dst="Host3">
            <link_ctn id="pfslink"/>
        </route>
        <route src="PFSHost1" dst="Host4">
            <link_ctn id="pfslink"/>
        </route>

        <route src="BBHost1" dst="Host1">
            <link_ctn id="bblink"/>
        </route>
        <route src="BBHost1" dst="Host2">
            <link_ctn id="bblink"/>
        </route>
        <route src="BBHost1" dst="Host3">
            <link_ctn id="bblink"/>
        </route>
        <route src="BBHost1" dst="Host4">
            <link_ctn id="bblink"/>
        </route>

        <route src="BBHost1" dst="PFSHost1">
            <link_ctn id="pfslink"/>
        </route>
    </zone>
</platform>
